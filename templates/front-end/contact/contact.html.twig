{% extends 'front.html.twig' %}

{% block body %}
    <div class="site-wrapper-reveal">
        <!--====================  Conact us Section Start ====================-->
        <div class="contact-us-section-wrappaer section-space--pt_100 section-space--pb_70">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 col-lg-6">
                        <div class="conact-us-wrap-one mb-30">
                            <h3 class="heading">Simple et Rapide! <br>Veuillez <span class="text-color-primary">nous contacter</span> <br>en remplissant ce formulaire.</h3>
                        </div>
                    </div>

                    <div class="col-lg-6 col-lg-6">
                        <div class="contact-form-wrap">
                            {{ form_start(form) }}

                                {% for message in app.flashes('success') %}
                                    <div class="successHandler alert alert-success">
                                        <i class="fa fa-ok"></i> {{ message }}
                                    </div>
                                {% endfor %}
                                <div class="contact-form">
                                    <div class="contact-input">
                                        <div class="contact-inner">
                                            {{ form_widget(form.name, {'attr': {'placeholder':'Nom *'}}) }}
                                            <span for="" class="help-block">{{ form_errors(form.name) }}</span>
                                        </div>
                                        <div class="contact-inner">
                                            {{ form_widget(form.email, {'attr': {'placeholder':'Email *'}}) }}
                                            <span for="" class="help-block">{{ form_errors(form.email) }}</span>
                                        </div>
                                    </div>
                                    <div class="contact-inner">
                                        {{ form_widget(form.objet, {'attr': {'placeholder':'Sujet *'}}) }}
                                        <span for="" class="help-block">{{ form_errors(form.objet) }}</span>
                                    </div>
                                    <div class="contact-inner contact-message">
                                        {{ form_widget(form.message, {'attr': {'placeholder':'Saisissez votre message *'}}) }}
                                        <span for="" class="help-block">{{ form_errors(form.message) }}</span>
                                    </div>
                                    <div class="submit-btn mt-20">
                                        {{ form_widget(form.send, {'label':'Envoyer le message', 'attr': {'class':'ht-btn ht-btn-md'}}) }}
                                        <p class="form-messege"></p>
                                    </div>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--====================  Conact us info Start ====================-->
        <div class="contact-us-info-wrappaer section-space--pb_100">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-4 col-md-6">
                        <div class="conact-info-wrap mt-30">
                            <h5 class="heading mb-20">Cote d'Ivoire</h5>
                            <ul class="conact-info__list">
                                <li>Rivera 3 Abidjan</li>
                                <li><a href="#" class="hover-style-link text-color-primary">contact@itwesbon.net</a></li>
                                <!-- li><a href="#" class="hover-style-link text-black font-weight--bold">(+68)1221 09876</a></!-->
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="conact-info-wrap mt-30">
                            <h5 class="heading mb-20">Etats - Unis</h5>
                            <ul class="conact-info__list">
                                <li>Minneapolis, Minnesota</li>
                                <li><a href="#" class="hover-style-link text-color-primary">contact.usa@itwesbon.net</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="conact-info-wrap mt-30">
                            <h5 class="heading mb-20">France</h5>
                            <ul class="conact-info__list">
                                <li>Paris</li>
                                <li><a href="#" class="hover-style-link text-color-primary">contact.france@itwebson.net</a></li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!--========== Call to Action Area Start ============-->
